{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"jsxFactory": "vscpp",
		"jsxFragmentFactory": "vscppf",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}
